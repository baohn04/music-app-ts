extends ../../layouts/default.pug

block main 
  .admin-detail
    h1(class="mb-4 title") Thông tin bài hát: #{pageTitle}

    if(song.title)
      h1(class="mb-4") Tên bài hát: #{song.title}

    if(singer.fullName)
      h1(class="mb-4") Ca sĩ: #{singer.fullName}  

    if(topic.title)
      h1(class="mb-4") Chủ đề: #{topic.title}

    if(song.avatar)
      div(class="mb-4")
        span Hình ảnh:
        img(
          src=song.avatar 
          alt=song.title
          style="width: 100px"
        )

    if(song.status) 
      div(class="mb-4")
        span Trạng thái: 
        if(song.status === "active")
          span(class="badge badge-success") Hoạt động
        else 
          span(class="badge badge-danger") Dừng hoạt động

    if(song.position)
      div(class="mb-4") Vị trí: <b>#{song.position}</b>

    if(song.description)
      div(class="mb-4") Mô tả: !{song.description}

    if(song.lyrics)
      div(class="mb-4 lyric") Lời nhạc:<br>#{song.lyrics.replace(/\[\d{2}:\d{2}\.\d{2}\]/g, '')}

    a(
      href=`${prefixAdmin}/songs/edit/${song.id}`
      class="btn btn-warning"
    ) Chỉnh sửa 