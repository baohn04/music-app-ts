extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  if(role.permissions.includes("users_edit"))
    +alert-success(3000)
    +alert-error(3000)

    .content-wrapper
      .row
        .col-12.grid-margin
          .card
            .card-body
              h4.card-title #{pageTitle}
              
              form.form-sample(
                action=`${prefixAdmin}/users/edit/${data.id}?_method=PATCH`
                method="POST"
                enctype="multipart/form-data"
              )
                p.card-description
                  | Nhập thông tin user

                .row
                  .col-md-12
                    .form-group.row
                      label.col-sm-3.col-form-label(for="fullName") Họ tên
                      .col-sm-9
                        input.form-control(
                          type="text"
                          id="fullName"
                          name="fullName"
                          required
                          value=data.fullName
                        )
                  .col-md-12
                    .form-group.row
                      label.col-sm-3.col-form-label(for="email") Email
                      .col-sm-9
                        input.form-control(
                          type="email"
                          id="email"
                          name="email"
                          required
                          value=data.email
                        )
                  .col-md-12
                    .form-group.row
                      label.col-sm-3.col-form-label(for="password") Mật khẩu
                      .col-sm-9
                        input.form-control(
                          type="password"
                          id="password"
                          name="password"
                        )
                
                .row
                  .col-md-12
                    .form-group.row(upload-image)
                      label.col-sm-3.col-form-label(for="avatar") Ảnh
                      .col-sm-9
                        input.form-control-file(
                          type="file"
                          id="avatar"
                          name="avatar"
                          accept="image/*"
                          upload-image-input
                        )
                        img.image-preview(
                          src=data.avatar
                          upload-image-preview
                          style="max-width: 200px; margin-top: 10px;"
                        )
                  .col-md-12
                    .form-group.row
                      label.col-sm-3.col-form-label Trạng thái
                      .col-sm-4
                        .form-check
                          label.form-check-label(for="statusActive")
                            input#statusActive.form-check-input(
                              type='radio'
                              name='status'
                              value='active'
                              checked=(data.status == "active" ? true : false)
                            )
                            | Hoạt động
                      .col-sm-5
                        .form-check
                          label.form-check-label(for="statusInActive")
                            input#statusInActive.form-check-input(
                              type='radio'
                              name='status'
                              value='inactive'
                              checked=(data.status == "inactive" ? true : false)
                            )
                            | Dừng hoạt động

                .row
                  .col-md-12
                    button(
                      type="submit"
                      class="btn btn-primary me-2"
                    ) Cập nhật

    script(src="/public/admin/css/style.css")

  else 
    h1 Bạn không có quyền truy cập vào trang này