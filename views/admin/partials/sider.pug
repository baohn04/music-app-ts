nav#sidebar.sidebar.sidebar-offcanvas
  ul.nav
    li.nav-item
      a.nav-link(href=`${prefixAdmin}/dashboard`)
        i.mdi.mdi-grid-large.menu-icon
        span.menu-title Dashboard
    li.nav-item.nav-category Forms and Datas
    li.nav-item
      a.nav-link(data-bs-toggle='collapse' href='#form-elements' aria-expanded='false' aria-controls='form-elements')
        i.menu-icon.mdi.mdi-card-text-outline
        span.menu-title Create
        i.menu-arrow
      #form-elements.collapse
        ul.nav.flex-column.sub-menu
          if(role.permissions.includes("topics_create"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/topics/create`) Thêm chủ đề
          if(role.permissions.includes("singers_create"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/singers/create`) Thêm ca sĩ
          if(role.permissions.includes("songs_create"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/songs/create`) Thêm bài hát
    li.nav-item
      a.nav-link(data-bs-toggle='collapse' href='#tables' aria-expanded='false' aria-controls='tables')
        i.menu-icon.mdi.mdi-table
        span.menu-title Tables
        i.menu-arrow
      #tables.collapse
        ul.nav.flex-column.sub-menu
          if(role.permissions.includes("topics_view"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/topics`) Chủ đề
          if(role.permissions.includes("singers_view"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/singers`) Ca sĩ
          if(role.permissions.includes("songs_view"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/songs`) Bài hát
          if(role.permissions.includes("accounts_view"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/accounts`) Tài khoản admin
          if(role.permissions.includes("users_view"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/users`) Tài khoản user
    li.nav-item.nav-category pages
    li.nav-item
      a.nav-link(data-bs-toggle='collapse' href='#auth' aria-expanded='false' aria-controls='auth')
        i.menu-icon.mdi.mdi-account-circle-outline
        span.menu-title User Pages
        i.menu-arrow
      #auth.collapse
        ul.nav.flex-column.sub-menu
          li.nav-item
            a.nav-link(href=`${prefixAdmin}/info-admin`)  Profile 
          if(role.permissions.includes("settingGeneral_edit"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/settings/general`)  Cài đặt chung
          li.nav-item
            a.nav-link(href='pages/samples/login.html')  Trang 404
    li.nav-item.nav-category role
    li.nav-item
      a.nav-link(data-bs-toggle='collapse' href='#role' aria-expanded='false' aria-controls='role')
        i.menu-icon.mdi.mdi-key-outline
        span.menu-title Role Pages
        i.menu-arrow
      #role.collapse
        ul.nav.flex-column.sub-menu
          if(role.permissions.includes("roles_view"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/roles`) Nhóm quyền
          if(role.permissions.includes("roles_permissions"))
            li.nav-item
              a.nav-link(href=`${prefixAdmin}/roles/permissions`) Phân quyền
