mixin audioPlayer()
  div(class="ms_player_wrapper")
    div(class="ms_player_close")
      i.fa.fa-angle-up(aria-hidden="true")
    div(class="player_mid")
      .audio-player
        #aplayer-global(style="display: none;")
        .aplayer-custom
          .row 
            .col-3
              .ap-left
                img.ap-cover(src="/images/logo.png", alt="cover")
                .ap-meta
                  .ap-title -
                  .ap-artist -
            .col-6
              .ap-center
                button(type="button", class="btn btn-link aplayer-prev", aria-label="Previous")
                  i(class="fa fa-backward")
                button(type="button", class="btn btn-link aplayer-play-pause", aria-label="Play/Pause")
                  i(class="fa fa-play")
                button(type="button", class="btn btn-link aplayer-next", aria-label="Next")
                  i(class="fa fa-forward")
                input(type="range", min="0", max="100", step="0.1", value="0", class="aplayer-progress")
                .ap-times
                  span.ap-time-current 00:00  
                  span.ap-time-duration 00:00
            .col-3
              .ap-right
                button(type="button", class="btn btn-link aplayer-replay", aria-label="Replay")
                  i(class="fa fa-rotate-right")
                i(class="fa fa-volume-up")
                input(type="range", min="0", max="1", step="0.01", value="0.8", class="aplayer-volume")
          