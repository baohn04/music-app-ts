extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/audio-player.pug

block main
  .ms_album_single_wrapper.ms_artist_single
    .album_single_data
      .album_single_img
        img.img-fluid(src=singer.avatar alt=singer.fullName)
      .album_single_text
        h2 #{singer.fullName}
        p.singer_name Ca sĩ, #{singer.nation}
    //- --Song List--
    div#songs-data(data-songs=JSON.stringify(songs) data-singers=JSON.stringify(singer), style="display: none;")
    .album_inner_list
      .album_list_wrapper
        ul.album_list_name
          li #
          li Tên bài hát
          li Ca sĩ
          li.text-center Thời lượng
          li.text-center Lượt nghe
          li.text-center Lượt Like
        each song, index in songs
          ul
            li
              a(class="play-audio")
                span.play_no= String(index + 1).padStart(2, '0')
                span.play_hover.play-song-audio(data-index=index)
            li
              a(href=`/songs/detail/${song.slug}`) #{song.title}
            li
              a(href=`/songs/singer/${song.infoSinger.slug}`) #{song.infoSinger.fullName}
            li.text-center
              a.song-duration(data-audio=song.audio) --:--
            li.text-center
              a(href="#") #{song.listen}
            li.text-center
              a(href='#') #{song.like}

  .ms_content_wrapper.ms_artist_content
    .ms_featured_slider
      .ms_heading
        h1 Ca sĩ liên quan
      .ms_relative_inner
        .ms_feature_slider.swiper-container
          .swiper-wrapper
            each singer in similarNationSingers
              .swiper-slide
                .ms_rcnt_box
                  .ms_rcnt_box_img
                    img(src=singer.avatar alt=singer.fullName)
                    .ms_main_overlay
                      a(href=`${singer.slug}`)
                        .ms_box_overlay
                        .ms_play_icon
                          img(src='/images/svg/play.svg' alt='')
                  .ms_rcnt_box_text
                    h3
                      a(href=`${singer.slug}`) #{singer.fullName}
        //- Add Arrows
        .swiper-button-next1.slider_nav_next
        .swiper-button-prev1.slider_nav_prev
  //- --Main div close--

  //- Audio Player
  +audioPlayer()