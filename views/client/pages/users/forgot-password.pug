extends ../../layouts/default.pug
include ../../mixins/alert.pug 

block main 
  +alert-success(3000)
  +alert-error(3000)

  .container.my-5
    div(class="modal-content")
      .modal-body
        .row
          .col-md-6
            div(class="ms_register_img")
              img.img-fluid(src="/images/register_img.png", alt="")
          .col-md-6
            form(
              action="/users/password/forgot" 
              method="POST"
            )
              div(class="ms_register_form")
                h2 Quên mật khẩu
                .form-group
                  input.form-control(
                    type="email",
                    placeholder="Email",
                    id="email",    
                    name="email",
                    required
                  )
                  span(class="form_icon")
                    i(class="fa_icon form-envelope", aria-hidden="true")
                button(
                  type="submit",
                  class="ms_btn"
                ) gửi email xác nhận